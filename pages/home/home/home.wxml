<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-orange cur':''}}" wx:for="{{garbageTypes}}" wx:key bindtap="tabSelect" data-id="{{index}}">
      {{item.name}}
    </view>
  </view>
</scroll-view>
<view class="flex  p-xs margin-bottom-sm mb-sm">
  <view class="flex-sub padding-sm margin-xs radius" wx:for="{{garbageTypes}}" data-id="{{index}}" wx:if="{{index==TabCur}}">{{item.description}}</view>
</view>
<view class="flex  p-xs margin-bottom-sm mb-sm" wx:for="{{garbageList}}">
  <view class="flex-sub padding-sm margin-xs">{{item.name}}</view>
</view>

